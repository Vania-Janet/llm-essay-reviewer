# OpenAI Configuration
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-4o
OPENAI_TEMPERATURE=0.3

# Database
DATABASE_URL=sqlite:///essay_evaluator/data/database/essays.db

# Flask Configuration
# CRÍTICO: Estas claves DEBEN ser únicas y nunca compartidas públicamente
# Genera claves seguras con: python setup_security.py
# O manualmente: python -c "import secrets; print(secrets.token_hex(32))"
FLASK_SECRET_KEY=your_secret_key_here_change_in_production_MUST_BE_64_CHARS
FLASK_ENV=development

# JWT Authentication
# Usa una clave diferente a FLASK_SECRET_KEY para mejor seguridad
JWT_SECRET_KEY=your_jwt_secret_key_here_change_in_production_MUST_BE_64_CHARS
JWT_ACCESS_TOKEN_EXPIRES=3600

# Upload Settings
UPLOAD_FOLDER=essay_evaluator/data/raw
MAX_UPLOAD_SIZE=10485760  # 10MB in bytes

# Processing Settings
BATCH_SIZE=5
MAX_CONCURRENT_EVALUATIONS=3

# Optional: Redis Cache (comment out if not using)
# REDIS_URL=redis://localhost:6379/0
# CACHE_TYPE=redis
# CACHE_TIMEOUT=300

# Logging
LOG_LEVEL=INFO
